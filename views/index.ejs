    function submitDatas(){
      $.ajax({
        type: "POST",
        url: "/save",
        data: {
          secret:secret,
          expiration:expiration,
          text:text,
        },
        success: function(data){
          alert(data.url);
          window.location.replace("http://"+data.url);
        }
      });
    }

