<!DOCTYPE html>
<html>
<head>
  <title>SourceBin</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/style.css"/>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">  
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">SourceBin</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
      </ul>
      <form class="form-inline my-2 my-lg-0">
        <!--<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">-->
        <%if (status == "new") { %>
          <button type="button" class="btn" data-toggle="modal" data-target="#exampleModal"><i class="fas fa-lock"></i> Encryption</button>
          <button onclick="setExpr('1000')" class="btn" href="#"><i class="fas fa-clock"></i> Expiration</button>    
          <button onclick="submitDatas()" class="btn btn-outline-success my-2 my-sm-0" ><i class="far fa-save"></i> Save</button>
        <% } else { %>
          <a href="http://localhost:3000/" class="btn btn-outline-info my-2 my-sm-0" ><i class="far fa-plus"></i> New</a>
        <% } %>
      </form>
  </nav>
  <div class="main-content">
    <%if (isEncrypted == false) { %>
      <textarea class="text-area" onkeyup="textAreaHandler()"><%= content %></textarea>
    <% } else { %>
      <textarea class="text-area" id="decrypted"></textarea>
    <% } %>      
  </div>
  <div class="info">
    Kelime sayisi: 
  </div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>  
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

<script>
  let secretKey = "";
  let expiration = false;
  let text = "";
  let url = "";

  function setKey(key){
    secretKey=key;
  }
          
  function setExpr(expr){
    expiration = expr;
  }
          
  function textAreaHandler(){
    text=$(".text-area")[0].value;
  }
          
  function submitDatas(){
    $.ajax({
      type: "POST",
      url: "/save",
      data: {
        secret:secretKey,
        expiration:expiration,
        text:text,
      },
      success: function(data){
        window.location.href = "http://"+data.url;
      }
    });
  }
  
  function decrypt(pass){
    $.ajax({
      type: "POST",
      url: "/decrypt",
      data: {
        key : window.location.pathname.split("/")[2],
        secret : pass,
      },
      success: function(data){
        if (data.status === 200){
          //alert(data.content)
          $("#decrypted").val(data.content);
          $("#modal").hide();
        }else{
          alert("yeniden dene sifreyi")
        }
      },
    });
  }
          
  $(document).ready(function(){
    if (<%= isEncrypted %> === true){
      $("#exampleModal").modal('toggle');    
    }
  });
          
</script>
        
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Encrypt paste</h5>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="secret">Password</label>
          <input type="password" class="form-control" id="secret" placeholder="Password">
        </div>
      </div>
      <div class="modal-footer">
        <%if (status == "new") { %>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>          
          <button type="button" onclick="setKey($('#secret').val());" data-dismiss="modal" class="btn btn-success">Save</button>
        <% } else {%>
          <button type="button" onclick="decrypt($('#secret').val());" class="btn btn-success">Decrypt</button>          
        <% } %>
      </div>
    </div>
  </div>
</div>
          
</html>
          